{% extends 'base.html.twig' %}

{% block title %} User {% endblock %}

{% block body %}
<section class="container m-5"> 
    <div class="row"> 
        {% for user in users %} 
            <div class="card col-md-3 m-2" style="width: 18rem;"> 
                <div class="card-body">
                    <p class="card-text">{{user.nom}}</p>                  
                    <p class="card-text">{{user.prenom}}</p>                  
                    <p class="card-text">{{user.datedeNaissance | date('d-M-y')}}</p>                  
                    <p class="card-text">{{user.email}}</p> <br> 

                    <a href="{{path('app_user_delete',{id:user.id})}}" class="btn btn-danger">Supprimer</a> <br> <br>
                    <a href="{{path('app_user_edit',{id:user.id})}}" class="btn btn-warning">Modifier</a>                  
                </div>      
            </div> 
        {% endfor %} 
    </div>

    <table class="table">
        <thead>
          <tr>
            <th scope="col">#Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Pr√©nom</th>
            <th scope="col">Email</th>
            <th scope="col">Date de naissance</th> 
            <th scope="col">Action</th> 
          </tr>
        </thead>
        <tbody> 
        {% for user in users %}
          <tr>
            <th scope="row">{{user.id}}</th> 
            <td>{{user.nom}}</td>
            <td>{{user.prenom}}</td> 
            <td>{{user.email}}</td> 
            <td>{{user.datedeNaissance | date('d/M/y')}}</td> 
            <td>
                <a href="{{path('app_user_edit',{id:user.id})}}"> <i class="text-warning fa fa-edit"></i> </a>
                <a href="{{path('app_user_delete',{id:user.id})}}"> <i class="text-danger fa fa-trash"></i> </a>
            </td>
          </tr>
        {% endfor %} 
        </tbody>
      </table>
</section>
{% endblock %}
